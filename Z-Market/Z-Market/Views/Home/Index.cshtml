@{
    ViewBag.Title = "Home Page";
}


<!--Principal Sector of the principal menu witch caroucel of bootstrap-->

<style>

    .item {
        display: block;
        width: 100%;
        height: 400px;
        background-position: center;
        background-repeat: non-repeat;
        background-size: cover;
    }

</style>



<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="http://www.ekaenlinea.com/wp-content/uploads/2015/07/Captura-de-pantalla-2015-07-27-a-las-16.58.27.png" alt="">
        </div>
        <div class="item">
            <img src="http://vaxoconsulting.com/wp-content/uploads/servicios-inventario-de-existencias-y-conciliacion-contable.jpg" alt="">
        </div>
        <div class="item">
            <img src="http://www.logisticademexico.com.mx/wp-content/uploads/2015/04/Portada-Prof-Inv.jpg" alt="">
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--This is the end of the principal sector in this view-->












<!--This is the zone of the scripts functions-->
<script type="text/javascript">
    // Call carousel manually
    $('#myCarouselCustom').carousel();

    // Go to the previous item
    $("#prevBtn").click(function () {
        $("#myCarouselCustom").carousel("prev");
    });
    // Go to the previous item
    $("#nextBtn").click(function () {
        $("#myCarouselCustom").carousel("next");
    });
</script>







